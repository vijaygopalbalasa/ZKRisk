{
  "name": "zkrisk-fluence-ai",
  "version": "1.0.0",
  "description": "Fluence AI service for volatility prediction and risk assessment",
  "main": "infer.py",
  "scripts": {
    "build": "python train_model.py",
    "deploy": "node deploy-fluence.js",
    "deploy:prod": "node deploy-production.js",
    "test": "python test_inference.py",
    "test:local": "python -m pytest tests/",
    "start": "python infer.py",
    "start:prod": "gunicorn --bind 0.0.0.0:5000 --workers 2 --timeout 30 infer:app",
    "docker:build": "docker build -f Dockerfile.prod -t zkrisk/ai-service:latest .",
    "docker:run": "docker run -p 5000:5000 zkrisk/ai-service:latest",
    "health": "curl -f http://localhost:5000/health || exit 1"
  },
  "dependencies": {
    "@fluencelabs/cli": "^0.10.0",
    "axios": "^1.6.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "python": {
    "requirements": [
      "flask==2.3.3",
      "flask-cors==4.0.0",
      "onnxruntime==1.16.3",
      "numpy==1.24.3",
      "pandas==2.0.3",
      "scikit-learn==1.3.0",
      "requests==2.31.0",
      "websocket-client==1.6.4"
    ]
  }
}